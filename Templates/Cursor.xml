<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Frame name="CPLightRaidCursorUnitInfoTemplate" virtual="true">
		<Size x="240" y="48"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentUnitPortrait" parentKey="UnitPortrait" alphaMode="BLEND">
					<Size x="46" y="46"/>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="UnitName" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="0" y="14"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeTo="$parentUnitPortrait" relativePoint="BOTTOMRIGHT" x="8" y="12"/>
						<Anchor point="TOPRIGHT" x="-8" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="UnitRole" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="0" y="12"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.UnitName" relativePoint="BOTTOMLEFT" x="0" y="-2"/>
						<Anchor point="RIGHT" relativeKey="$parent.UnitName"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>